<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="coffee.com.coffee.ShowCoffeeDetails">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/coffee_title_bg"
        android:textColor="@color/dark_gray"
        android:textStyle="bold" />

    <View
        android:id="@+id/line1"
        android:layout_below="@id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/dark_gray"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_below="@id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:textColor="@color/gray"
        android:textSize="@dimen/coffee_desc"/>

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/networkImageView1"
        android:layout_below="@id/textView2"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView3"
        android:layout_below="@id/networkImageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/coffee_last_update"
        android:textColor="@color/gray"
        android:textStyle="italic"/>

</RelativeLayout>
