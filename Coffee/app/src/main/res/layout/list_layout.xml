<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="8dp">

    <!-- Coffee Title -->
    <TextView
        android:id="@+id/coffeeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/coffee_title"
        android:textColor="@color/dark_gray"
        android:textStyle="bold"/>

    <!-- Coffee Description -->
    <TextView
        android:id="@+id/coffeeDesc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/coffeeTitle"
        android:layout_marginTop="1dp"
        android:textColor="@color/gray"
        android:textSize="@dimen/coffee_desc" />

    <!-- Network Image View to display coffee image -->
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/networkImageView"
        android:layout_below="@id/coffeeDesc"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginRight="8dp" />

</RelativeLayout>
